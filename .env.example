# Metrics AI Engine Configuration

# Prometheus
PROMETHEUS_URL=http://prometheus:9090
PROMETHEUS_TIMEOUT=30

# Ollama
OLLAMA_URL=http://ollama:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_GENERATION_MODEL=codellama:13b
OLLAMA_TIMEOUT=120

# Vector Store
VECTOR_STORE_PATH=./vector_store
VECTOR_DIMENSION=768

# API
API_HOST=0.0.0.0
API_PORT=8001

# Anomaly Detection
ZSCORE_THRESHOLD=3.0
IQR_MULTIPLIER=1.5
MIN_CONSENSUS=2
CONTAMINATION=0.1

# Logging
LOG_LEVEL=INFO
